# Common Chronicle Frontend Environment Variables Example
# Copy this file to .env and fill in your actual values

# ===== API Configuration =====
# Backend API base URL (leave empty for auto-detection in development)
VITE_API_BASE_URL=https://api.your-domain.com

# Backend API domain for environment detection
VITE_API_DOMAIN=api.your-domain.com

# Frontend domain for CORS and allowed hosts
VITE_FRONTEND_DOMAIN=your-domain.com

# ===== Development Configuration =====
# Local development backend port
VITE_DEV_BACKEND_PORT=8080

# Local development frontend port
VITE_DEV_FRONTEND_PORT=5173

# ===== WebSocket Configuration =====
# WebSocket protocol for production (wss/ws)
VITE_WS_PROTOCOL_PROD=wss

# WebSocket protocol for development (wss/ws)
VITE_WS_PROTOCOL_DEV=ws

# ===== Environment Detection =====
# Environment mode (development/production)
VITE_ENV_MODE=production
